<p id="notice"><%= notice %></p>

<h1>Searched Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Mail</th>
      <th>Age</th>
      <th>State</th>
      <th>Role</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.mail %></td>
        <td><%= contact.age %></td>
        <td><%= contact.state %></td>
        <td><%= contact.role %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path %> |
<%= link_to 'Filters', filters_path %> |
<%= link_to 'All Contacts', contacts_path %>
